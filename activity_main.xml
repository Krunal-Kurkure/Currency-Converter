<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Currency Converter"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="2">
        <TextView
            android:id="@+id/tv_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Currency Name"
            android:textSize="18sp"
            android:textColor="#CDCDCD"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_margin="12dp"/>
        <TextView
            android:id="@+id/tv_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Currency Rate"
            android:textColor="#CDCDCD"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_margin="12dp"/>

    </LinearLayout>
    <EditText
        android:id="@+id/edt_amount"
        android:layout_width="380dp"
        android:layout_gravity="center"
        android:textColorHint="#BEFFFFFF"
        android:backgroundTint="@color/white"
        android:paddingBottom="20dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:hint="Enter Amount"
        android:layout_marginTop="20dp"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:weightSum="3.5">
        <Button
            android:id="@+id/btnusd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USD"
            android:textColor="#5940A4"
            android:backgroundTint="@color/white"
            android:layout_weight="1"
            android:layout_marginStart="12dp"/>
        <Button
            android:id="@+id/btngbp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GBP"
            android:textColor="#5940A4"
            android:backgroundTint="@color/white"
            android:layout_weight="1"
            android:layout_marginStart="12dp"/>
        <Button
            android:id="@+id/btneur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EUR"
            android:textColor="#5940A4"
            android:backgroundTint="@color/white"
            android:layout_weight="1"
            android:layout_marginStart="12dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="3.5">
        <Button
            android:id="@+id/btnaus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AUS"
            android:textColor="#5940A4"
            android:backgroundTint="@color/white"
            android:layout_weight="1"
            android:layout_marginStart="12dp"/>
        <Button
            android:id="@+id/btncan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CAN"
            android:textColor="#5940A4"
            android:backgroundTint="@color/white"
            android:layout_weight="1"
            android:layout_marginStart="12dp"/>
        <Button
            android:id="@+id/btnjpy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JPY"
            android:textColor="#5940A4"
            android:backgroundTint="@color/white"
            android:layout_weight="1"
            android:layout_marginStart="12dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvresult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESULT"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_margin="50dp"/>

</LinearLayout>